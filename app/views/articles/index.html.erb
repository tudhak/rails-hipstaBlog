<div class="container my-4 mx-auto">

  <h2 class="text-center text-primary">Browse trending hipster stories</h2>

    <div class="row justify-content-center mb-4">
      <div class="col-sm-8 my-4">
        <%= form_with url: articles_path, method: :get, class: "d-flex" do %>
          <%= text_field_tag :query,
                params[:query],
                class: "form-control",
                placeholder: "Find your next inspiration"
            %>
          <%= submit_tag "Search", name: "", class: "btn btn-primary" %>
        <% end %>
      </div>
    </div>

  <div class="row justify-content-center">
    <% if @articles.any? %>

      <% @articles.each do |article| %>

        <div class="col-lg-4 col-md-6">

          <%= link_to article_path(article), class:"article-text" do %>

            <div class="card article-container">
              <%= cl_image_tag article.photo.key, crop: :fill, class:"card-img-top article-img border-bottom" %>
              <div class="card-body d-flex flex-column justify-content-between card-content">
                <div class="d-flex align-items-center">
                  <i class="fa-solid fa-mug-hot" style="width: 40px;"></i>
                  <h5 class="card-title m-0"><strong><%= article.title %></strong></h5>
                </div>
                <div class="d-flex align-items-center">
                  <i class="fa-solid fa-euro-sign" style="width: 40px;"></i>
                  <p class="card-text"><%= article.date %></p>
                </div>
                <div class="d-flex align-items-center">
                  <i class="fa-solid fa-user" style="width: 40px;"></i>
                  <p class="card-text"><%= article.user.first_name %> <%= article.user.last_name %></p>
                </div>
              </div>
              <% if current_user == article.user %>
                <%= link_to article_path(article), class: "text-decoration-none text-primary article-delete", data: {turbo_method: :delete, turbo_confirm: "Do you want to delete this article?"} do %>
                  <i class="fa-solid fa-trash"></i>
                <% end %>
              <% end %>
            </div>

          <% end %>

        </div>

      <% end %>

    <% else %>
      <em>Sorry, no articles found.</em>
    <% end %>
  </div>

</div>
