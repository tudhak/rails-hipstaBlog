<%= simple_form_for [article, message],
    url: up_article_message_path(article, message),
    method: :patch,
    html: {
      data: {
      voting_target: "upForm",
      action: "submit->voting#upVote" }
      } do |f| %>
  <input type="hidden" id="message_rating" name="message[rating]" value="1" data-voting-target="upVoteValue">
  <%= button_tag type: "submit", class: "submit-vote", data: { voting_target: "upVote"} do %>
    <i class="fa-solid fa-thumbs-up vote-icon vote-up"></i>
  <% end %>
<% end %>
