        <% else %>
          <li class="nav-item">
            <%= link_to new_user_session_path, class: "nav-link" do %>
              <%= image_tag "guest.jpg", class: "avatar", alt: "guest picture" %>
            <% end %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
