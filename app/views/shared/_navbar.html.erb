  <div class="container-fluid px-3">
    <div class="navbar-logo-container">
      <%= link_to root_path, class: "navbar-brand" do %>
        <%= image_tag "https://png2.cleanpng.com/sh/2bae1a49f6a315e027b16d87a4a83db2/L0KzQYm3V8A0N6l9hJH0aYP2gLBuTfJmaaNpRdN7dD3pcbTsTfxwb5CyTdQ8Yka6RLO6UsVkPWUzSaIAM0a7QYG4VcMxPmIAT6Q8MkC5Q3B3jvc=/kisspng-beard-art-face-logo-5b3b674b325c54.1053681015306197232063.png" %>
      <% end %>
